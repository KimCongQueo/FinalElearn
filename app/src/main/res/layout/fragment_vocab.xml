<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <nauq.mal.com.formapp.views.CustomFontButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginLeft="@dimen/card_corner_10"
            android:text="@string/txt_learn_voca"
            android:background="@drawable/bg_button"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <nauq.mal.com.formapp.views.CustomFontTextView
            android:text="Select all"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_select_all"
            android:gravity="center"
            android:layout_marginLeft="@dimen/card_corner_10"
            android:layout_width="@dimen/height_avatar_50"
            android:layout_height="@dimen/height_avatar_50" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_vocab_topic"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
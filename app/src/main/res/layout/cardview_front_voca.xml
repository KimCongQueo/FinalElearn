<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/card_corner_10"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_avatar_50"
            android:text="@string/txt_meaning"
            android:textColor="#000"
            android:textSize="@dimen/height_code" />

        <TextView
            android:id="@+id/tv_spell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_word"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/icon_color"
            android:textSize="@dimen/height_code_30" />

        <ImageView
            android:id="@+id/btn_play_front"
            android:layout_width="@dimen/height_avatar_50"
            android:layout_height="@dimen/height_avatar_50"
            android:layout_below="@+id/tv_spell"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/height_avatar_50"
            android:src="@drawable/ic_play_button" />
        <RelativeLayout
            android:id="@+id/layout_mean"
            android:layout_below="@id/btn_play_front"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/card_corner_10"
                android:text="Mean:"
                android:textColor="#000"
                android:textSize="@dimen/text_large_20"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvMean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_mean"
                android:layout_marginStart="@dimen/card_corner_10"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_mean"
                android:layout_marginStart="@dimen/card_corner_10"
                android:layout_marginTop="15dp"
                android:text="Usage:"
                android:textColor="#000"
                android:textSize="@dimen/text_large_20"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_usage"
                android:visibility="visible"
                android:layout_marginStart="@dimen/card_corner_10"
                android:text="@string/app_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_usage"
                android:layout_marginStart="@dimen/card_corner_10"
                android:layout_marginTop="15dp"
                android:text="Example:"
                android:textColor="#000"
                android:textSize="@dimen/text_large_20"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_exx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_example"
                android:layout_marginStart="@dimen/card_corner_10"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:visibility="visible" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
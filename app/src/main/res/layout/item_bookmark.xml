<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_corner_10"
    android:layout_marginStart="@dimen/card_corner_10">

    <com.jackandphantom.circularimageview.RoundedImage
        android:id="@+id/img_ava"
        android:layout_width="100dp"
        android:layout_height="@dimen/height_80"
        android:layout_marginBottom="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/card_corner_10"
        android:maxWidth="165dp"
        android:text="Post"
        android:textColor="@color/text_color_grey"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/img_ava"
        app:layout_constraintTop_toTopOf="@id/img_ava" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:maxWidth="165dp"
        android:text="Post"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ImageView
        android:id="@+id/img_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bookmark_deff"
        android:background="@drawable/ic_bookmark_slted"
        app:layout_constraintBottom_toBottomOf="@id/img_ava"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_ava" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="@dimen/card_corner_10"
        android:layout_height="@dimen/card_corner_10"
        android:layout_marginTop="90dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_rec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/dot" />
</android.support.constraint.ConstraintLayout>
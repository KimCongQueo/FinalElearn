<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:round_image="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_bg_profile"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_avatar"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <nauq.mal.com.formapp.views.RoundedConnerImageView
                            android:id="@+id/imv_avatar"
                            android:layout_width="@dimen/height_avatar_110"
                            android:layout_height="@dimen/height_avatar_110"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_def"
                            round_image:corner_radius="@dimen/height_avatar" />

                        <ImageView
                            android:id="@+id/imv_change_avatar"
                            android:layout_width="@dimen/height_icon_small"
                            android:layout_height="@dimen/height_icon_small"
                            android:layout_gravity="right|bottom"
                            android:layout_marginBottom="@dimen/margin_edi_profilet_icon"
                            android:layout_marginRight="@dimen/margin_edi_profilet_icon"
                            android:padding="2dp"
                            android:src="@drawable/ic_edit_photo" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kim Cong Queo"
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/text_medium_15" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_fullname"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"
                          />

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_fullname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.2"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="Trần Hồng Quân"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_birthday"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"
                          />

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="12/10/1990"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                          />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_gender"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"
                          />

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.2"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="Male"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_phone_number"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"
                          />

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="0905 111999"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"
                          />

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.2"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="01 Quang Trung, Quận Hải Châu, Đà Nẵng"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_email"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13"/>

                    <nauq.mal.com.formapp.views.CustomFontTextView
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:text="dcmen@gmail.com"
                        android:textColor="@color/text_color_grey"
                        android:textSize="@dimen/text_small_13"
                          />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="@string/txt_password"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_small_13" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1.2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:inputType="textPassword"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:text="201616"
                            android:textColor="@color/text_color_grey"
                            android:textSize="@dimen/text_small_13"/>

                        <LinearLayout
                            android:id="@+id/view_change_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:background="@drawable/bg_collapse_expand_full"
                            android:orientation="horizontal"
                            android:paddingBottom="3dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="5dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="@string/txt_change_password_1"
                                android:textColor="#fff"
                                android:textSize="@dimen/text_small_11" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:src="@drawable/bg_arrow_collapse_expand" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="#e1e1e1" />

                <nauq.mal.com.formapp.views.CustomFontButton
                    android:id="@+id/btn_edit"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:text="@string/txt_change_profile"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_small_14"
                    android:textStyle="bold"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
</FrameLayout>
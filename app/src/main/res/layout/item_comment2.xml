<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round_image="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_comment"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="@dimen/card_corner_10"
    android:paddingStart="@dimen/card_corner_10">

    <View
        android:id="@+id/view_divider_top"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="#e1e1e1"
        android:visibility="visible"
        round_image:layout_constraintEnd_toEndOf="parent"
        round_image:layout_constraintStart_toStartOf="parent"
        round_image:layout_constraintTop_toTopOf="parent" />

    <nauq.mal.com.formapp.views.RoundedConnerImageView
        android:id="@+id/imv_ava_cmt"
        android:layout_width="@dimen/height_avatar_50"
        android:layout_height="@dimen/height_avatar_50"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_avatar"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ava"
        round_image:corner_radius="100dp"
        round_image:layout_constraintStart_toStartOf="parent"
        round_image:layout_constraintTop_toBottomOf="@id/view_divider_top" />

    <TextView
        android:id="@+id/tv_fullname_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:singleLine="true"
        android:text="@string/txt_name_demo"
        android:textColor="#000"
        android:textSize="@dimen/text_small_14"
        android:textStyle="bold"
        round_image:layout_constraintStart_toEndOf="@id/imv_ava_cmt"
        round_image:layout_constraintTop_toTopOf="@id/imv_ava_cmt" />

    <TextView
        android:id="@+id/tv_date_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/card_corner_10"
        android:paddingStart="@dimen/card_corner_10"
        android:singleLine="true"
        android:text="@string/txt_time_create"
        android:textColor="#000"
        android:textSize="@dimen/text_small_12"
        android:visibility="gone"
        round_image:layout_constraintEnd_toStartOf="@id/imv_edit"
        round_image:layout_constraintTop_toTopOf="@id/tv_fullname_cmt" />

    <ImageView
        android:id="@+id/imv_edit"
        android:layout_width="@dimen/text_size_30"
        android:layout_height="@dimen/text_size_30"
        android:contentDescription="@null"
        android:padding="8dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_threedot_blue"
        round_image:layout_constraintEnd_toEndOf="parent"
        round_image:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/card_corner_10"
        android:layout_marginTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/txt_explain_ans"
        android:textColor="#000"
        android:textSize="@dimen/text_small_14"
        round_image:layout_constraintEnd_toStartOf="@id/imv_edit"
        round_image:layout_constraintStart_toStartOf="@id/tv_fullname_cmt"
        round_image:layout_constraintTop_toBottomOf="@id/tv_fullname_cmt" />
</android.support.constraint.ConstraintLayout>
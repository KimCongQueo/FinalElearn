<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPost"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_tab"
                android:layout_weight="1"
                android:background="@drawable/bg_tab"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Posts"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp" />

            <View
                android:layout_width="15dp"
                android:layout_height="1dp" />


            <Button
                android:id="@+id/btnWord"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_tab"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_tab"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="Words"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_top_voca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_corner_10"
            android:background="#60c4db"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:text="@string/txt_word"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMeaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/txt_meaning"
                android:textColor="#fff"
                app:layout_constraintEnd_toStartOf="@id/tvBookmark"
                app:layout_constraintStart_toEndOf="@id/tvWords" />

            <TextView
                android:id="@+id/tvBookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/txt_bookmark"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
        <!--<FrameLayout-->
        <!--android:id="@+id/frame_main"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginTop="10dp" />-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/card_corner_10"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/card_corner_10"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_search"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_button_add"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_search" />
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_loginn"
    android:layout_height="match_parent">
    <include layout="@layout/navigation_header_layout" />
    <LinearLayout
        android:id="@+id/layout_select_practice"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <nauq.mal.com.formapp.views.CustomFontButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginStart="@dimen/card_corner_10"
            android:text="@string/txt_do_practice"
            android:background="@drawable/bg_button"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <nauq.mal.com.formapp.views.CustomFontTextView
            android:text="@string/txt_select_all"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_select_all"
            android:gravity="center"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_width="@dimen/height_avatar_50"
            android:layout_height="@dimen/height_avatar_50" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/card_corner_10"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_describe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_avatar_110"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:src="@drawable/img_top_learn_voca" />

        <TextView
            android:id="@+id/tv_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_describe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/card_corner_10"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="@dimen/text_size_22" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="@dimen/height_code"
            android:layout_height="@dimen/height_code"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_describe"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_marginTop="@dimen/card_corner_10"
            android:contentDescription="@null"
            android:src="@drawable/ic_play_button" />
        <TextView
            android:id="@+id/tv_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_play"
            android:visibility="gone"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_marginTop="@dimen/card_corner_10"
            android:text="Usage:"
            android:textSize="@dimen/text_large_20" />
        <TextView
            android:id="@+id/tv_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_usage"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_marginTop="@dimen/card_corner_10"
            android:text="@string/app_name"
            android:textSize="@dimen/text_large_20" />
        <TextView
            android:id="@+id/tv_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_meaning"
            android:visibility="gone"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_marginTop="@dimen/card_corner_10"
            android:text="Example:"
            android:textSize="@dimen/text_large_20" />
        <TextView
            android:id="@+id/tv_exx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_example"
            android:layout_marginStart="@dimen/card_corner_10"
            android:layout_marginTop="@dimen/card_corner_10"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textSize="@dimen/text_small_13" />
        <TextView
            android:id="@+id/tv_morre"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_more"
            android:textColor="@color/icon_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/card_corner_19"
            android:layout_marginBottom="@dimen/card_corner_19"
            android:textSize="@dimen/text_medium_16"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>